{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "moduleResolution": "bundler",
    "module": "CommonJS",
    "target": "ES2022",
    "sourceMap": false,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "declaration": true,
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "./*.ts": [
        "./*"
      ]
    }
  },
  "include": [
    "index.d.ts",
    "tests/**/*.ts",
    "src/**/*.ts",
    "jest.config.*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
