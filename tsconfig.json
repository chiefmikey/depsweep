{
  "compilerOptions": {
    "lib": [
      "es2022"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2022",
    "sourceMap": false,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "declaration": true,
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
