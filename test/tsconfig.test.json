{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@/*": [
        "../src/*"
      ],
      "@test/*": [
        "./*"
      ]
    }
  },
  "include": [
    "../src/**/*",
    "./**/*"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../coverage"
  ]
}
